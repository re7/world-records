{% extends 'AppMainBundle::layout.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h1>Inscription</h1>
            {{ form_start(form) }}
                {{ form_rest(form) }}
                <p>
                    <button type="submit" class="btn btn-default">S'inscrire</button>
                    ou <a href="{{ path('login_route') }}">se connecter</a>
                </p>
            {{ form_end(form) }}
            <p class="text-muted">{{ 'security.register.security_note'|trans }}</p>
        </div>
    </div>
{% endblock %}
