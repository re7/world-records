{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets
        'bundles/appmain/css/bootstrap.min.css'
        'bundles/appmain/css/bootstrap-theme.min.css'
        'bundles/appmain/css/main.css'
        filter='cssrewrite'
    %}
        <link href="{{ asset_url }}" rel="stylesheet" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts
        '@AppMainBundle/Resources/public/js/jquery-2.1.3.min.js'
        '@AppMainBundle/Resources/public/js/bootstrap.min.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('app_main_homepage') }}">World Records</a>
            </div>
            <div id="navbar" class="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('app_main_submission_submit') }}">Soumettre un record</a></li>
                    <li><a href="{{ path('app_main_submission_list') }}">En attente</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li><a href="{{ path('logout') }}">DÃ©connexion</a></li>
                    {% else %}
                        <li><a href="{{ path('login_route') }}">Se connecter</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <div id="content" class="container">
        {% block flashMessage %}
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="alert alert-info">
                    {{ flashMessage }}
                </div>
            {% endfor %}
        {% endblock %}
        {% block content %}{% endblock %}
    </div>
{% endblock %}
